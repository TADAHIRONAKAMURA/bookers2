<body>
 <div class="container">
  <div class="row">
　  <div class="col-lg-3" style=""> 
     <%= render 'users/list_users', user: current_user %>
     <%= render 'books/list_books', book: @book %>
    </div>
    <div class="col-lg-9" style="">
     <h2>Book detail</h2>
     <table class="table">
      <tr><td><%= attachment_image_tag(@book.user, :image, :fill, 60, 60, class: "image") %><%= link_to user_path(@book.user_id) do %><br><%= @book.user.name %><% end %></td>
       <td><%= @book.book_title %></td>
       <td><%= @book.book_body %></td>
       <% if current_user.id == @book.user_id %>
       <td><%= link_to 'Edit', edit_book_path(@book.id), class: "edit_book_#{@book.id} btn btn-success active btn-sm" %></td>
       <td><%= link_to "Destroy", book_path(@book.id), class: "destroy_book_#{@book.id} btn btn-danger active btn-sm", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
       <% end %>

      </tr>
     </table>
    </div>
   </div>
  </div>
  <footer>
  <div class='container'>
   <div class='row'>
    <div class='col-xs-3 col-xs-offset-9'>
     <p>CopyRight Infratop.inc</p>
    </div>
   </div>
  </div>
 </footer>
</body>

